
<div class="upcoming_events">
<h2> Events you are interested in </h2>
<ul>
  <%@all_events.each do |event| %>
    <div class="event">
      Title <span data-title="<%=event["event"]["title"]%>"><%=event["event"]["title"]%></span>
      Distance from you <span data-distance="<%=event["event"]["distance"]%>"><%=event["event"]["distance"]*%></span>
      <span data-description="<%=event["event"]["description"]%>"><%=event["event"]["description"]%></span>
      Address <span data-address="<%=event["event"]["venue"]["adddress"]%>"><%=event["event"]["venue"]["adddress"]%></span>
      <span data-start-date="<%=event["event"]["start_date"]%>"><%=event["event"]["start_date"]%></span>
      <span data-end-date="<%=event["event"]["end_date"]%>"><%=event["event"]["end_date"]%></span>
      <form method='post' action='event/new'>
        <input type='submit' value='I want to go to this event'>
      </form>
      <br><br><br>
    </div>
  </ul>
 <%end%>
</div>